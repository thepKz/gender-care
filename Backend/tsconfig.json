{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "lib": ["es2016", "es2020", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}