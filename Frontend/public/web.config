<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- SPA Router Configuration for IIS -->
    <rewrite>
      <rules>
        <!-- Handle client-side routing -->
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Not a file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Not a directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Not API route -->
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
            <!-- Not static assets -->
            <add input="{REQUEST_URI}" pattern="^/(assets|images|css|js|fonts)/" negate="true" />
            <!-- Not specific file extensions -->
            <add input="{REQUEST_URI}" pattern="\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map)$" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
        
        <!-- Handle static assets with proper caching -->
        <rule name="Static Assets" stopProcessing="true">
          <match url="^/(assets|images|fonts)/(.*)$" />
          <action type="Rewrite" url="/{R:1}/{R:2}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
      </customHeaders>
    </httpProtocol>

    <!-- Enable compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Static file caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
      
      <!-- MIME types for modern files -->
      <mimeMap fileExtension=".woff" mimeType="font/woff" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <!-- Error pages -->
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/index.html" responseMode="ExecuteURL" />
      <remove statusCode="500" subStatusCode="-1" />
      <error statusCode="500" path="/index.html" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration> 